generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]

  tasks         Task[]
  habits        Habit[]
  projects      Project[]
  labels        Label[]
  moodLogs      MoodLog[]
  focusSessions FocusSession[]

  @@map("user")
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  priority    String    @default("MEDIUM") // LOW, MEDIUM, HIGH
  date        DateTime? // For scheduling
  dueDate     DateTime? // Hard deadline

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  labels        LabelOnTask[]
  focusSessions FocusSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("task")
}

model Habit {
  id          String    @id @default(cuid())
  title       String
  description String?
  frequency   String[] // e.g. ["MON", "WED", "FRI"] or ["DAILY"]
  period      String // "MORNING", "AFTERNOON", "EVENING", "ANYTIME"
  goal        Int       @default(1)
  startDate   DateTime  @default(now())
  endDate     DateTime?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  logs HabitLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("habit")
}

model HabitLog {
  id        String   @id @default(cuid())
  date      DateTime // Normalized to midnight or specific date
  completed Boolean  @default(true)

  habitId String
  habit   Habit  @relation(fields: [habitId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([habitId, date])
  @@map("habit_log")
}

model Project {
  id    String  @id @default(cuid())
  name  String
  color String?
  type  String  @default("PERSONAL") // PERSONAL, WORK, etc.

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  tasks Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("project")
}

model Label {
  id    String  @id @default(cuid())
  name  String
  color String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  tasks LabelOnTask[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("label")
}

model LabelOnTask {
  taskId  String
  task    Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  labelId String
  label   Label  @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@id([taskId, labelId])
  @@map("label_on_task")
}

model MoodLog {
  id   String   @id @default(cuid())
  mood Int // 1-5 scale (or similar)
  note String?
  date DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("mood_log")
}

model FocusSession {
  id          String   @id @default(cuid())
  duration    Int // in minutes or seconds
  completedAt DateTime @default(now())

  taskId String?
  task   Task?   @relation(fields: [taskId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("focus_session")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime
  updatedAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
